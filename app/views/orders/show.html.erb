<div class="container">
  <h2>Order Information</h2>
  <strong>Order ID: </strong><%= @order.id %>
  <strong>Product Name: </strong><%= @order.product.name %>
  <%= image_tag(@order.product.image, class: "img-fluid") %>
  <strong>Product Price: </strong><%= number_to_currency(@order.product.price) %>
  <strong>Total Price: </strong><%= number_to_currency(@order.total/100.to_f) %>
</div>
